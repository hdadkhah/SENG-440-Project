We will be encoding our own tree to make the code optimized.



void padding ( char ch, int n )
{
	int i;
	for ( i = 0; i < n; i++ )
		putchar ( ch );
}
void structure ( struct node *root, int level )
{
	int i;
	if ( root == NULL ) {
		padding ( '\t', level );
		puts ( "~" );
	}
	else {
		structure ( root->right, level + 1 );
		padding ( '\t', level );
		printf ( "%d\n", root->value);
		structure ( root->left, level + 1 );
	}
}



structure ( tree, 0 );
	
	return 1;